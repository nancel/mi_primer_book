{% extends layout_template  %}

{% block title %}{{ user.displayName }}{% endblock %}

{% block content %}
<div class="media">
    <img class="media-object pull-left" src="{{ imageUrl }}" width="80" height="80">

    <div class="media-body">

        <h1 class="media-heading">
            {{ user.displayName }}
        </h1>


        {% if is_granted('EDIT_USER', user) %}
            <div class="text-muted">
                {{ user.email }}
            </div>
        {% endif %}

        <div class="text-muted">
            Registered {{ user.timeCreated|date('F j, Y') }}
        </div>
		</br>
        {% if not is_granted('ROLE_ADMIN') %}
            <div>
                <a href="/user/books"><span class="glyphicon glyphicon-edit" style="margin-right: 5px;"></span>Ver mis books</a>
            </div>
        {% endif %}
        
    </div>
</div>


{% endblock %}